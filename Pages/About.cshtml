@page
@{
    ViewData["Title"] = "About Me";
}
<h2>@ViewData["Title"]</h2>
<link rel="stylesheet" href="../css/swiper.min.css">
<style>
    html, body {
        position: relative;
        height: 100%;
    }

    body {
        background-color: #e6e6fa;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 14px;
        color: #000;
        margin: 0;
        padding: 0;
    }

    .swiper-container {
        width: 100%;
        height: 22%;
    }

    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }
</style>
<br />
<section id="about">

    <div class="row section-intro">
        <div class="col-twelve">
            <h4>
                KYLE WONG
            </h4>
            <h4>About Me</h4>

            <div class="intro-info">

                <img class="rounded" src="images/profile-pic.jpg" alt="Profile Picture" width="95" height="125">
                <p class="lead">I'm a Software Developer. I enjoy  Software design &amp; Web Design related projects.</p>
            </div>

        </div>
    </div>


    <div class="row about-content">
        <div class="col-six tab-full">

            <h3>Skills</h3>
            <p>My knowledge and Technical skills</p>

            <ul class="skill-bars">
                <li>
                    <div class="progress percent80"><span>4</span></div>
                    <strong>HTML5</strong>
                </li>
                <li>
                    <div class="progress percent90"><span>4</span></div>
                    <strong>CSS</strong>
                </li>
                <li>
                    <div class="progress percent80"><span>4</span></div>
                    <strong>Javascript/JQuery</strong>
                </li>
                <li>
                    <div class="progress percent75"><span>4</span></div>
                    <strong>C#</strong>
                </li>
                <li>
                    <div class="progress percent75"><span>4</span></div>
                    <strong>ASP.net</strong>
                </li>
                <li>
                    <div class="progress percent60"><span>3</span></div>
                    <strong>WordPress</strong>
                </li>
            </ul>
        </div>
        <div class="col-six tab-full">
            <h3>Projects</h3>
            <p>Projects I'm involved in</p>
            <p class="uline bold">Resorts World Genting</p>

            <div class="swiper-container">

                <div class="swiper-wrapper">
                    <div class="swiper-slide">

                        <img class="rounded" src="images/rwg.png" alt="Profile Picture" width="250" height="110">
                    </div>
                    <div class="swiper-slide">Slide 2</div>
                    <div class="swiper-slide">Slide 3</div>
                </div>
                <div class="swiper-scrollbar"></div>
            </div>



        </div>
    </div>

</section>
<script src="../js/swiper.min.js"></script>

<!-- Initialize Swiper -->
<script>
    var swiper = new Swiper('.swiper-container', {
      scrollbar: {
        el: '.swiper-scrollbar',
        hide: true,
      },
    });
</script>